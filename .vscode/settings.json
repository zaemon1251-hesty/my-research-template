{
  // zaemon1251 は 個人の設定に合わせて変更してください
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3.10",
  "python.linting.mypyEnabled": true,
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/.venv/lib/python3.10/site-packages/"
  ],
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/lib/python3.10/site-packages/"
  ],
  "editor.formatOnSave": true,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/pflake8",
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "[python]": {
    "gitlens.codeLens.symbolScopes": [
      "!Module"
    ],
    "editor.wordBasedSuggestions": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/images/**": true
  },
}